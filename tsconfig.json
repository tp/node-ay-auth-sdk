{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "pretty": true,
    "target": "es5",
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {},
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "noErrorTruncation": true,
    "outDir": "./compiled",
    "rootDir": "."
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["compiled/**"]
}
